{
  "name": "camonhudson",
  "type": "module",
  "version": "0.0.1",
  "description": "A Bluesky bot posting photos of the Hudson.",
  "private": true,
  "repository": "git@github.com:muziejus/camonhudson.git",
  "scripts": {
    "build:tsc": "tsc --noEmit false",
    "build": "pnpm run clean && npm-run-all build:tsc",
    "clean": "rimraf dist/*",
    "lint": "eslint --color --format=pretty . --cache",
    "lint:fix": "eslint --color --format=pretty . --fix",
    "start": "pnpm run build && node dist/",
    "dev": "nodemon",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "node",
    "bluesky-social"
  ],
  "author": "Moacir P. de SÃ¡ Pereira <github@moacir.moacir.com> (http://moacir.com)",
  "license": "MIT",
  "engines": {
    "node": ">=18"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "subject-case": [
        2,
        "always",
        "sentence-case"
      ],
      "subject-full-stop": [
        0
      ]
    }
  },
  "devDependencies": {
    "@commitlint/cli": "^17.8.1",
    "@commitlint/config-conventional": "^17.8.1",
    "@types/node": "^20.16.13",
    "@types/suncalc": "^1.9.2",
    "eslint": "^9.13.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-formatter-pretty": "^5.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "multiformats": "^13.3.0",
    "nodemon": "^3.1.7",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "rimraf": "^5.0.10",
    "typescript": "^5.6.3"
  },
  "dependencies": {
    "@atproto/api": "^0.13.12",
    "@babel/runtime": "^7.25.7",
    "dotenv": "^16.4.5",
    "node-fetch": "^3.3.2",
    "pi-camera": "^1.7.0",
    "sharp": "^0.32.6",
    "suncalc": "^1.9.0"
  }
}
